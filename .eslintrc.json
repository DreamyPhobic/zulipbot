{
  "extends": "xo-space",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "camelcase": "off",
    "capitalized-comments": "off",
    "curly": ["error", "multi-line", "consistent"],
    "indent": ["error", 2],
    "max-nested-callbacks": ["error", 3],
    "max-len": ["error", 80],
    "max-params": ["error", 5],
    "no-await-in-loop": "off",
    "quotes": ["error", "double"],
    "space-before-function-paren": ["error", "never"]
  }
}
